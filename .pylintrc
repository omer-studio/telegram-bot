[MESSAGES CONTROL]
# השתקת אזהרות של חבילות חיצוניות שלא מותקנות בסביבת הפיתוח המקומית
disable=
    import-error,
    no-name-in-module,
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    no-member,
    unused-import,
    unused-variable,
    unused-argument,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-few-public-methods,
    too-many-public-methods,
    too-many-instance-attributes,
    line-too-long,
    invalid-name,
    broad-except,
    bare-except,
    redefined-outer-name,
    global-statement,
    fixme,
    consider-using-f-string,
    unspecified-encoding,
    consider-using-with,
    subprocess-run-check,
    logging-not-lazy,
    logging-format-interpolation,
    logging-fstring-interpolation,
    wrong-import-position,
    wrong-import-order,
    ungrouped-imports,
    multiple-imports,
    wildcard-import,
    unused-wildcard-import,
    reimported,
    duplicate-code,
    similar-lines,
    cyclic-import,
    relative-beyond-top-level,
    useless-import-alias,
    unnecessary-pass,
    pointless-statement,
    expression-not-assigned,
    unnecessary-semicolon,
    trailing-whitespace,
    trailing-newlines,
    mixed-line-endings,
    multiple-statements,
    superfluous-parens,
    bad-whitespace,
    bad-continuation

[MASTER]
# חבילות שיש להתעלם מהן (חבילות שמותקנות בפריסה אבל לא מקומית)
ignored-modules=
    psycopg2,
    telegram,
    fastapi,
    uvicorn,
    psutil,
    requests,
    gspread,
    oauth2client,
    apscheduler,
    pytz

[TYPECHECK]
# התעלמות מחבילות חסרות
ignored-classes=
    psycopg2,
    telegram,
    fastapi,
    uvicorn

[FORMAT]
max-line-length=120 